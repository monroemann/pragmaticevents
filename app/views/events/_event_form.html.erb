<%= form_for(@event) do |f| %>
		<%= render 'shared/errors', object: @event %>
		<p>

			<%= f.label :name %><br>
			<%= f.text_field :name, autofocus: true %><br><br>

			<%= f.label :image_file_name %><br><br>
			<%= f.text_field :image_file_name, size: 30, placeholder: "JPEG File" %><br><br>

			<%= f.label :capacity %><br><br>
			<%= f.number_field :capacity %><br><br>

			<%= f.label :location %><br><br>
			<%= f.text_field :location %><br><br>

			<%= f.label :price %><br>
			<%= f.number_field :price %><br><br>

			<%= f.label :description %><br>
			<%= f.text_area :description %><br><br>

			<%= f.label :starts_at %><br>
			<%= f.datetime_select :starts_at %><br><br>


			<%= f.submit %> | 
			<%= link_to 'Cancel', events_path %>
		</p>
	</div>

<% end %>