<header>
	<h1>Registrations For <%= @event.name %></h1>
</header>

<div>
	<ul>
	<% if @registrations.any? %>
		<% @registrations.each do |registration| %>

			<li>
				<%= link_to registration.user.name, registration.user %>
				<span class="date">
					<%= time_ago_in_words(registration.created_at) %> ago
				</span>		
				<span class="how-heard">
					(<%= registration.how_heard %>)
				</span>
			</li>
		<% end %>
	<% else %>
		<li>NO REGISTRATIONS</li>
	<% end %>
	</ul>
</div>